variant: fcos
version: 1.3.0
passwd:
  users:
    - name: core
      ssh_authorized_keys:
        - ssh-rsa 
storage:
  files:
    - path: /etc/ssh/sshd_config.d/20-set-port.conf
      mode: 0644
      contents:
        inline: |
          Port 55522
  disks:
  - device: /dev/vda
    wipe_table: false
    partitions:
    - number: 4
      label: root
      size_mib: 0
      resize: true
    - size_mib: 1024
      label: data
  luks:
    - name: data
      device: /dev/disk/by-partlabel/data
      key_file:
        source: https://raw.githubusercontent.com/300481/experiments/master/fedora-coreos/TODO.md
  filesystems:
    - path: /var/lib/data
      device: /dev/mapper/data
      format: xfs
      label: DATA
      with_mount_unit: true