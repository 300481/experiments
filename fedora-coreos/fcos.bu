variant: fcos
version: 1.3.0
passwd:
  users:
    - name: core
      ssh_authorized_keys:
        - ssh-rsa 
storage:
  files:
    - path: /etc/ssh/sshd_config.d/20-set-port.conf
      mode: 0644
      contents:
        inline: |
          Port 55522
    - path: /usr/local/bin/encryption-start.sh
      mode: 0755
      contents:
        source: https://raw.githubusercontent.com/300481/datacrypt/0.1.2/files/startscripts/encryption.sh
    - path: /usr/local/bin/encryption-stop.sh
      mode: 0755
      contents:
        source: https://raw.githubusercontent.com/300481/datacrypt/0.1.2/files/stopscripts/shutdown.sh
